<!-- BOOTSTRAP -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
  crossorigin="anonymous"
/>

<%- include('../partials/header') %>

<!-- Contact page -->
<div class="contact-page">
  <!-- First section -->
  <div class="first-section">
    <div
      class="container mh-350px d-flex flex-column justify-content-center align-items-center"
    >
      <div class="top c-primary-light py-3 display-6">Other Services</div>
      <div class="fs-2 text-white">We also offer</div>
    </div>
  </div>

  <!-- Second section -->
  <div class="second-section py-4">
    <div class="container">
      <div class="row">
        <div class="col col-12 col-md-6 py-4">
          <div class="fs-2">
            <span class="c-primary"> Fieldvest</span> (Lekki) Cooperative
            Multipurpose Society Limited
          </div>
          <div class="d-flex gap-3 align-items-center py-3">
            <div>
              <span class="material-icons c-primary"> phone_iphone </span>
            </div>
            <div>
              <a href="tel:+2349031839009" class="c-primary ununderline"
                >+234 903 183 9009</a
              >
            </div>
          </div>
          <div class="d-flex gap-3 align-items-center py-3">
            <div>
              <span class="material-icons c-primary"> mail </span>
            </div>
            <div>
              <a href="mailto:" class="c-primary ununderline"
                >mail@fundvest.com</a
              >
            </div>
          </div>
        </div>
        <div class="col col-12 col-md-6 py-4">
         <div class="py-3">
            <div class="display-6">Send a message</div>
            <div class="c-primary">Use the form below for assistance.</div>
         </div>

          <form action="" class="border p-4 rounded">
            <div class="mb-3">
              <div class="row">
                <div class="col">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Full name"
                    aria-label="Full name"
                    name="name"
                    id="name"
                  />
                </div>
                <div class="col">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    placeholder="Last name"
                    aria-label="Last name"
                    name="email"
                    id="email"
                  />
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label for="message">Message</label>
              <textarea
                placeholder="Message"
                class="form-control"
                rows="8"
                id="message"
                name="message"
              ></textarea>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Third section -->
  <div class="third-section"></div>
</div>

<%- include('../partials/footer') %>
