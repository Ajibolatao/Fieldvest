<!-- BOOTSTRAP -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
  crossorigin="anonymous"
/>

<%- include('../partials/header') %>

<!-- First section -->
<div
  class="first-section bg-success mh-500px d-flex justify-content-center align-items-center py-5"
>
  <div class="mw-500px bg-light border border-light rounded">
    <form action="" class="p-4">
      <div class="row g-3 mb-3">
        <div class="col">
          <label for="firstname">First name *</label>
          <input
            type="text"
            class="form-control"
            placeholder="First name"
            aria-label="First name"
            id="firstname"
            name="firstname"
            required
          />
        </div>
        <div class="col">
          <label for="lastname">Last name *</label>
          <input
            type="text"
            class="form-control"
            placeholder="Last name"
            aria-label="Last name"
            id="lastname"
            name="lastname"
            required
          />
        </div>
      </div>

      <div class="row g-3 mb-3">
        <div class="col">
          <label for="phone">Phone number *</label>
          <input
            type="number"
            class="form-control"
            placeholder="Phone number"
            aria-label="Phone number"
            id="phone"
            name="phone"
            required
          />
        </div>
        <div class="col">
          <label for="email">Email address *</label>
          <input
            type="email"
            class="form-control"
            placeholder="Email"
            aria-label="Email"
            id="email"
            name="email"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="dob" class="form-label">Date of birth *</label>
        <input type="date" class="form-control" id="dob" name="dob" required />
      </div>

      <div class="row g-3 mb-3">
        <div class="col">
          <label for="password">Password *</label>
          <input
            type="password"
            class="form-control"
            placeholder="Password"
            aria-label="Password"
            id="password"
            name="password"
            required
          />
        </div>
        <div class="col">
          <label for="password2">Confirm password *</label>
          <input
            type="text"
            class="form-control"
            placeholder="Confirm password"
            aria-label="Confirm password"
            id="password2"
            name="password2"
            required
          />
        </div>
      </div>

      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value=""
          id="flexCheckDefault"
        />
        <label class="form-check-label mb-3" for="flexCheckDefault">
          I agree with the  <a href="/terms" class="c-primary ununderline">Terms and Conditions</a>  of the Cooperative Society.
        </label>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-outline-success">Register</button>
      </div>
      <div class="mb-3">Already have an account? <a href="/login" class="c-primary ununderline">Login</a> </div>
    </form>
  </div>
</div>
<!-- Second section -->
<div class="second-section"></div>
<!-- Third section -->
<div class="third-section"></div>

<%- include('../partials/footer') %>
